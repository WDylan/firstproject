{% extends 'base.html.twig' %}

{% block title %}Hello LoginController
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="mt-4">Se connecter</h2>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">{{ message }}</div>
		{% endfor %}
		{% if error %}
			<div class="alert aler-dismissible alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('app_login') }}" method="post" class="mt-4">
			<div>
				<div>
					<label for="username" class"form-label">Email :</label>
				</div>
				<div>
					<input class"form-control" type="text" id="username" name="_username" value="{{ last_username }}">
				</div>

				<div>
					<label for="password" class"form-label">Mot de passe :</label>
				</div>
				<div>
					<input class"form-control" type="password" id="password" name="_password">
				</div>
			</div>
			{# If you want to control the URL the user is redirected to on success
			<input type="hidden" name="_target_path" value="/account"> #}

			<button type="submit" class="btn btn-dark mt-4">Login</button>
		</form>
	</div>
{% endblock %}
